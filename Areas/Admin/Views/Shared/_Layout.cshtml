@{
    Layout = null; 
    var appName = "Event Booking System";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@appName - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin/Event/Index">@appName (Admin)</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Event/Index">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Booking/Index">Bookings</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/Account/Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>

   
    <footer class="bg-light text-center py-3 mt-4 border-top">
        <p class="mb-0">&copy; @DateTime.Now.Year - @appName | Admin Panel</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
